@using NoteAppUI.Models.ViewModel
@model SubNoteViewModel
@{
    ViewData["Title"] = "AddSubNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

    <h3>Alt Not Ekle</h3>
    <div class="container mt-2">
        <form asp-action="AddSubNote" asp-controller="Home" method="post">
            <div class="form-label">
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text text-danger"></span>
            </div>
            <div class="form-label">
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </div>

        </form>

    </div>
</body>
</html>
