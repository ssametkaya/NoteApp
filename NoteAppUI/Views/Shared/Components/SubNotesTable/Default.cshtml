@using NoteAppUI.Models.ViewModel
@model List<SubNoteViewModel>


<table class="table table-striped tab">
    <thead>
        <tr>

            <th scope="col">#</th>
            <th scope="col">Alt Not</th>
            <th scope="col">Tarih</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            if (item.IsDeleted == false)
            {
                <tr>
                    @{i++;}
                    <th scope="row">@i</th>
                    <td>@item.Description</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yy HH:mm")</td>
                    <td><a href="/Home/DeleteSubNote/@item.Id" class="btn btn-danger btn-sm">Sil</a></td>
                </tr>
            }
        }
    </tbody>
</table>